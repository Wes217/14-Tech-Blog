<div class="text-center card">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div >
<div class="card">
  <form class="form comment-post-form">
    <div class="form-group">
      <textarea class="form-input" id="comment-text" name="comment-text"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary" data-id="{{id}}">Comment</button>
    </div>
    </form>
</div>

{{#each comments as |comment| }}
<div class="card">
  <p>
    {{content}}
  </p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>
{{/each}}

 <script src="/js/comment.js"></script>