<div class="col-md-6">
    <h3>Edit Post:</h3>

    <form class="form   update-post-form">
      <div class="form-group">
        <label for="post-name">Title:</label>
        <input class="form-input" type="text" id="post-name" name="post-name" value="{{title}}" />
      </div>
      <div class="form-group">
        <label for="post-text">Text:</label>
        <textarea class="form-input" id="post-text" name="post-text">{{content}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" data-id="{{id}}">Update</button>
      </div>
    </form>
  </div>

  <script src="/js/edit.js"></script>